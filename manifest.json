{
"name": "Scrapper",
"version": "0.1",
"manifest_version" : 2,
"description": "Does some simple stuff",
"background" : {
  "scripts" : ["jquery.min.js" , "background.js"],
  "persistent": true 
},
"browser_action": {
        
      "default_icon": "images/logo.png" ,
       "default_popup": "popup.html"  
      },
"permissions": ["activeTab",  "tabs" , "declarativeContent", "storage"]
}